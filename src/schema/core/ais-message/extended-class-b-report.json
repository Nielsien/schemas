{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://poseidat.org/schema/core/ais-message/extended-class-b-report.json",
  "title": "Extended class B report for the AIS",
  "description": "A position report message for the AIS for a class b ship combined with static data of the ship.",
  "properties": {
    "ais_message_type": {
      "description": "The message type of the given AIS measurement",
      "type": "string",
      "enum": [
        "CLASS_B_EQUIPMENT_POSITION_REPORT"
      ],
      "default": "CLASS_B_EQUIPMENT_POSITION_REPORT"
    },
    "position": {
      "description": "The position of the AIS entity",
      "$ref": "https://poseidat.org/schema/core/measurement/position.json"
    },
    "position_accuracy": {
      "description": "The accuracy of the given AIS position. LOW is > 10 meters, HIGH is <= 10 meters ",
      "$ref": "https://poseidat.org/schema/enum/ais-position-accuracy.json",
      "default": "LOW"
    },
    "true_heading": {
      "description": "Degrees (0-359) (511 indicates not available = default)",
      "type": "number",
      "default": 511,
      "maximum": 511,
      "minimum": 0
    },
    "entity_name": {
      "description": "The name of the AIS entity",
      "type": "string",
      "maximum": 20,
      "default": "@@@@@@@@@@@@@@@@@@@@"
    },
    "ship_type": {
      "description": "The type of vessel given by the AIS, default is 0 ('Not available')",
      "$ref": "https://poseidat.org/schema/enum/ais-ship-type.json",
      "default": "NOT_AVAILABLE"
    },
    "dimension_to_bow": {
      "description": "Indicates the dimension of ship",
      "type": "integer",
      "default": 0
    },
    "dimension_to_stern": {
      "description": "Indicates the dimension of ship",
      "type": "integer",
      "default": 0
    },
    "dimension_to_port": {
      "description": "Indicates the dimension of ship",
      "type": "integer",
      "default": 0
    },
    "dimension_to_starboard": {
      "description": "Indicates the dimension of ship",
      "type": "integer",
      "default": 0
    },
    "position_device_type": {
      "description": "The type of navigation device",
      "$ref": "https://poseidat.org/schema/enum/ais-position-device-type.json",
      "default": "UNDEFINED"
    },
    "assigned_mode_flag": {
      "description": "State of station if it is operating in autonomous or assigned mode",
      "$ref": "https://poseidat.org/schema/enum/ais-assigned-mode-flag.json",
      "default": "AUTONOMOUS_CONTINUOUS_MODE"
    },
    "raim_flag": {
      "description": "Receiver autonomous integrity monitoring (RAIM) flag of electronic position fixing device",
      "$ref": "https://poseidat.org/schema/enum/ais-raim-flag.json",
      "default": "RAIM_NOT_IN_USE"
    }
  },
  "required": ["ais_message_type", "position", "position_accuracy", "true_heading", "entity_name", "ship_type",
    "dimension_to_stern", "dimension_to_port","dimension_to_starboard", "dimension_to_bow", "position_device_type", "assigned_mode_flag", "raim_flag"],
  "allOf": [
    { "$ref": "https://poseidat.org/schema/core/ais-message/base-ais-message.json" }
  ],
  "type": "object",
  "additionalProperties": true
}

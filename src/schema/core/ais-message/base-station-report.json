{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://poseidat.org/schema/core/ais-message/base-station-report.json",
  "title": "Position report AIS",
  "description": "A position report message for the AIS.",
  "properties": {
    "ais_message_type": {
      "description": "The message type of the given AIS measurement",
      "type": "string",
      "enum": [
        "BASE_STATION_REPORT"
      ],
      "default": "BASE_STATION_REPORT"
    },
    "date": {
      "description": "The date and time when the AIS message was created.",
      "type": "string",
      "format": "date-time"
    },
    "position": {
      "description": "The position of the AIS entity",
      "$ref": "https://poseidat.org/schema/core/measurement/position.json"
    },
    "position_accuracy": {
      "description": "The accuracy of the given AIS position. LOW is > 10 meters, HIGH is <= 10 meters ",
      "$ref": "https://poseidat.org/schema/enum/ais-position-accuracy.json",
      "default": "LOW"
    },
    "position_device_type": {
      "description": "The type of navigation device",
      "$ref": "https://poseidat.org/schema/enum/ais-position-device-type.json",
      "default": "UNDEFINED"
    },
    "control_long_range_message": {
      "description": "Transmission control for long-range broadcast message",
      "$ref": "https://poseidat.org/schema/enum/ais-long-range-control-type.json",
      "default": "STOP_TRANSMISSION_MESSAGE_27"
    },
    "raim_flag": {
      "description": "Receiver autonomous integrity monitoring (RAIM) flag of electronic position fixing device",
      "$ref": "https://poseidat.org/schema/enum/ais-raim-flag.json",
      "default": "RAIM_NOT_IN_USE"
    },
    "communication_state": {
      "description": "Communication state selector flag",
      "type": "integer"
    }
  },
  "allOf": [
    { "$ref": "https://poseidat.org/schema/core/ais-message/base-ais-message.json" }
  ],
  "required": ["ais_message_type", "date", "position", "position_accuracy", "position_device_type", "control_long_range_message", "raim_flag", "communication_state"],
  "type": "object",
  "additionalProperties": false
}
